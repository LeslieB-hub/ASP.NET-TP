@model BOMod6.Samourai

@{
    ViewBag.Title = "Details";
}

<h2>Details</h2>

<div>
    <h4>Samourai</h4>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayNameFor(model => model.Force)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Force)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.Nom)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Nom)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.Arme)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Arme.Nom)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.ArtMartials)
        </dt>

        <dd>
            @if (Model.ArtMartials != null)
            {
                foreach (var item in Model.ArtMartials)
                {
                    @Html.DisplayFor(i => item.Nom)<br />
                }
            }
            else
            {
                <p>Pas d'art martiaux</p>
            }
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.Potentiel)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Potentiel)
        </dd>

    </dl>
</div>
<p>
    @Html.ActionLink("Modifier", "Edit", new { id = Model.Id }, new { @Class = "btn btn-default" }) |
    @Html.ActionLink("Retour à la liste", "Index", "Samourais", new { @Class = "btn btn-default" })
</p>
